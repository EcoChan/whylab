/**index.wxss**/
page {
    background:#1c1b21;
}

.index-swiper {
    height: 450rpx; 
}

.swiper-link {
    display: inline;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.list-header {
    background: #1c1b21; 
    font-size: 16rpx;
    color: #B2B2B2;
    padding: 16rpx 0 14rpx 78rpx; 
    border-bottom: 1px solid rgba(203,203,205, 0.1);
}

.list-header .header-text {
    border-left: 4rpx solid #016BFF;
    line-height: 28rpx;
    padding-left: 16rpx;
}

.list-item {
    display: flex;
    padding-left: 78rpx;
    overflow: hidden;
    height: 240rpx;
    background: linear-gradient(#1b1a20, #384f8f);
    /*background-image: linear-gradient(-179deg, rgba(27,26,32,.9), rgba(55,79,143,0.2));*/
}

.item-image {
    width: 210rpx;
    height: 240rpx;
    position: relative;
    top: 20rpx;
}

.item-text {
    margin-top: 80rpx;
    margin-left: 120rpx;
}

.item-company {
    display: block;
    font-size: 23rpx;
    line-height: 32rpx;
    color: #FFFFFF;
}

.item-name {
    display: block;
    font-size: 40rpx;
    color: #FFFFFF;
    font-weight: bolder;
    margin-top: 20rpx;
}